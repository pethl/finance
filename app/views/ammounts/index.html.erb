<h1>Ammounts</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Ammount</th>
      <th>Estimated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ammounts.each do |ammount| %>
      <tr>
        <td><%= ammount.date %></td>
        <td><%= ammount.ammount %></td>
        <td><%= ammount.estimated %></td>
        <td><%= link_to 'Show', ammount %></td>
        <td><%= link_to 'Edit', edit_ammount_path(ammount) %></td>
        <td><%= link_to 'Destroy', ammount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '>> add new Ammount', new_ammount_path %>
